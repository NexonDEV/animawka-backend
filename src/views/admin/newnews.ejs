<% extend('../layout') %>

<main>
	<div class="container">
		<%- include('menu',{cp:"news"}) %>
		<div class="col s12 m12">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Nowy news</span>
					<form id="save" method="POST" action="/admin/newnews" class="col s12">
						<div class="row">
							<div class="input-field col s12 m12">
								<input name="title" id="title" type="text">
								<label for="title">Tytuł</label>
							</div>
							<div class="input-field col s12 m6">
								<select name="type">
									<option value="0">Aktualności</option>
									<option value="1">Ogłoszenie</option>
									<option value="2">Anime</option>
									<option value="3">Manga</option>
									<option value="4">Rekrutacja</option>
								</select>
								<label>Typ</label>
							</div>
							<div class="input-field col s12 m6">
								<input name="tags" id="tags" type="text">
								<label for="tags">Tagi (rozdziel "," i spacją!)</label>
							</div>
							<div class="input-field col s12 m12">
								<textarea id="content" name="content" class="materialize-textarea"></textarea>
								<label for="content">Wiadomość:</label>
							</div>
							<div class="input-field col s12 m12">
								<input name="image" id="image" type="text">
								<label for="image">URL obrazka</label>
							</div>
						</div>
						<input type="hidden" name="user" value="<%= user.data.ID %>"/>
					</form>
				</div>
				<div class="card-action">
					<a class="blue-text" href="javascript:save()">Zapisz</a>
					<a href="/admin/news">Anuluj</a>
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function() {

			});

			function save() {
				$("#save").submit();
			}
		</script>
	</div>
</main>