<% extend('../layout') %>

<main>
	<div class="container">
		<%- include('menu',{cp:"reviews"}) %>
		<div class="col s12 m12">
			<div class="card">
				<div class="card-content">
					<span class="card-title">Nowa recenzja</span>
					<form id="save" method="POST" action="/admin/newreview" class="col s12">
						<div class="row">
							<div class="input-field col s12 m12">
								<input name="title" id="title" type="text">
								<label for="title">Tytuł recenzji</label>
							</div>
							<div class="input-field col s12 m6">
								<select name="type">
									<option value="0">Anime</option>
									<option value="1">Manga</option>
								</select>
								<label>Typ recenzji</label>
							</div>
							<div class="input-field col s12 m6">
								<input name="tags" id="tags" type="text">
								<label for="tags">Tagi (rozdziel "," i spacją!)</label>
							</div>
							<div class="input-field col s12 m12">
								<textarea style="height:150px;" id="content" name="content" class="materialize-textarea"></textarea>
								<label for="content">Treść recenzji</label>
							</div>
							<div class="input-field col s12 m12">
								<input name="image" id="image" type="text">
								<label for="image">URL obrazka</label>
							</div>
							<div class="input-field col s12 m12">
								<input name="yt" id="yt" type="text">
								<label for="yt">URL do embedu You Tube recenzji</label>
							</div>
						</div>
						<input type="hidden" name="user" value="<%= user.data.ID %>"/>
					</form>
				</div>
				<div class="card-action">
					<a class="blue-text" href="javascript:save()">Zapisz</a>
					<a href="/admin/reviews">Anuluj</a>
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function() {

			});

			function save() {
				$("#save").submit();
			}
		</script>
	</div>
</main>