<% extend('layout') %>

<main>
	<div class="container">
		<div class="row">
			<div class="col s12 m12">
				<div class="card">
					<div class="card-content">
						<span class="card-title"><%= title %></span>
						<p>NapisaÅ‚: <%- user.data.login %>, Data: <%- news.data.date %></p>
						<p>
									<% if (news.data.tags != "") {
										var tag = news.data.tags.split(",");

										for (var a = 0; a < tag.length; a++) {%>
											<span class="new badge blue left" data-badge-caption=""><%= tag[a] %></span>
										<%}
									}%>
						</p>
						<br /><br />
						<p><%- news.data.content %></p>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>